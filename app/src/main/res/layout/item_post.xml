<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center">

    <TextView
        android:id="@+id/tvPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@id/tvPostEmotion"
        android:background="#E9E5ED"
        tools:text="All i want is love and laughs is all I want to much to ask - Olivia Rodrigo" />

    <Button
        android:id="@+id/btnExclaim"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/tvPost"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@id/btnHeart"
        android:backgroundTint="@color/purple_500"
        android:text="!!"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnHeart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/tvPost"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@id/btnComment"
        android:backgroundTint="@color/purple_500"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnComment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/tvPost"
        android:layout_alignEnd="@id/tvPost"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/purple_500"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvPostEmotion"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvPost"
        android:layout_alignBottom="@id/tvPost"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        tools:text=":)" />

    <TextView
        android:id="@+id/tvPostTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPostEmotion"
        android:layout_alignStart="@id/tvPostEmotion"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        tools:text="2 days ago" />

</RelativeLayout>