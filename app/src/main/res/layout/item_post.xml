<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center">

    <TextView
        android:id="@+id/tvPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@id/tvPostEmotion"
        android:background="#E9E5ED"
        tools:text="All i want is love and laughs is all I want to much to ask - Olivia Rodrigo" />

    <ImageButton
        android:id="@+id/btnExclaim"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/tvPost"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@id/tvNumLikes"
        android:background="@drawable/purple_exclaim" />

    <ImageButton
        android:id="@+id/btnHeart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/tvPost"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@id/tvNumComments"
        android:background="@drawable/purple_heart" />

    <ImageButton
        android:id="@+id/btnComment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/tvPost"
        android:layout_alignEnd="@id/tvPost"
        android:layout_marginEnd="5dp"
        android:background="@drawable/purple_arrow"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvPostEmotion"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvPost"
        android:layout_alignBottom="@id/tvPost"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        tools:text=":)" />

    <TextView
        android:id="@+id/tvPostTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPostEmotion"
        android:layout_alignStart="@id/tvPostEmotion"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        tools:text="2 days ago" />

    <TextView
        android:id="@+id/tvNumExclaims"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignBottom="@id/btnExclaim"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@id/btnExclaim"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="3" />

    <TextView
        android:id="@+id/tvNumLikes"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignBottom="@id/btnHeart"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@id/btnHeart"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="25" />

    <TextView
        android:id="@+id/tvNumComments"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignBottom="@id/btnComment"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@id/btnComment"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="11" />

</RelativeLayout>